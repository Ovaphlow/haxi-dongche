        location /haxi {
            alias e:/srcode/haxi-dongche/webapp/dist;
            index index.html;
        }

        location /haxi/api/user {
            proxy_pass http://127.0.0.1:8081/api/user;
            proxy_redirect off;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        location /haxi/api/dept {
            proxy_pass http://127.0.0.1:8081/api/dept;
            proxy_redirect off;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        location /haxi/api/ {
            proxy_pass http://127.0.0.1:8082/api/;
            proxy_redirect off;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
